<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>

  <body>
    <main>
      <h1><%= title %></h1>

      <% if (locals.errors) {%>
      <ul>
        <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
        <%}); %>
      </ul>
      <% }%>

      <form action="/books/<%= book.id %>?_method=PUT" method="post">
        <label for="title">
          * Title
          <input
            value="<%= book.title %>"
            type="text"
            name="title"
            id="title"
            required
          />
        </label>

        <label for="summary">
          * Summary
          <textarea name="summary" id="summary"><%= book.summary %></textarea>
        </label>

        <label for="authorId">
          * Author
          <select name="authorId" id="authorId">
            <% authors.forEach(author => { %> <% if (author.id ==
            book.author_id) { %>
            <option selected value="<%= author.id%>">
              <%= author.author_name %>
            </option>
            <% } else { %>
            <option value="<%= author.id%>"><%= author.author_name %></option>
            <% } %> <% });%>
          </select>
        </label>

        <label for="genreId">
          * Genre
          <select selected="<%= book.genre_id %>" name="genreId" id="genreId">
            <% genres.forEach(genre => { %> <% if (genre.id == book.genre_id) {
            %>
            <option selected value="<%= genre.id%>">
              <%= genre.genre_name %>
            </option>
            <% } else { %>
            <option value="<%= genre.id%>"><%= genre.genre_name %></option>
            <% } %> <% });%>
          </select>
        </label>

        <label for="pages">
          Pages:
          <input
            value="<%= book.pages %>"
            type="number"
            name="pages"
            id="pages"
          />
        </label>

        <label for="releaseDate">
          Pages:
          <input
            value="<%= book.release_date %>"
            type="date"
            name="releaseDate"
            id="releaseDate"
          />
        </label>
        <button type="submit">Submit</button>
      </form>

      <a href="/">Home</a>
    </main>
  </body>
</html>
