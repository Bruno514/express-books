<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>

  <body>
    <main>
      <% if (locals.errors) {%>
      <ul>
        <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
        <%}); %>
      </ul>
      <% }%>

      <form action="/genres/<%= genre.id %>?_method=PUT" method="post">
        <h1><%= title %></h1>

        <label class="required" for="name">
          Genre:
          <input
            value="<%= genre.genre_name %>"
            type="text"
            name="name"
            id="name"
            maxlength="255"
            required
          />
        </label>

        <label for="description">
          Description:
          <textarea name="description" id="description" maxlength="255">
            <%= genre.description %>
          </textarea>
        </label>

        <button type="submit">Submit</button>
      </form>

      <a href="/">Home</a>
    </main>
  </body>
</html>
